{
  "$schema": "./UIComponentContract.json",
  "$comment": "Valores default para quando o usuário responder 'não sei' ou não responder",
  
  "visualStates": {
    "hover": {
      "enabled": true,
      "effect": "subtle-highlight",
      "description": "Destaque sutil ao passar o mouse"
    },
    "focus": {
      "enabled": true,
      "effect": "ring",
      "description": "Anel de foco para acessibilidade"
    },
    "disabled": {
      "enabled": true,
      "effect": "opacity-50 cursor-not-allowed",
      "description": "Visual esmaecido e cursor de bloqueio"
    },
    "loading": {
      "enabled": "when_async",
      "effect": "spinner",
      "description": "Spinner quando há operação assíncrona"
    },
    "error": {
      "enabled": true,
      "effect": "toast",
      "description": "Toast com mensagem de erro"
    },
    "success": {
      "enabled": true,
      "effect": "toast",
      "description": "Toast com mensagem de sucesso"
    }
  },
  
  "feedback": {
    "success": {
      "type": "toast",
      "duration": 3000,
      "message": "Operação realizada com sucesso!",
      "position": "top-right"
    },
    "error": {
      "type": "toast",
      "duration": 5000,
      "message": "Não foi possível completar a operação.",
      "position": "top-right"
    }
  },
  
  "behavior": {
    "debounce": {
      "enabled": true,
      "delay": 300,
      "description": "Evita cliques múltiplos acidentais"
    },
    "optimisticUpdate": {
      "enabled": true,
      "description": "Atualiza UI imediatamente, reverte se erro"
    }
  },
  
  "accessibility": {
    "keyboard": {
      "enabled": true,
      "keys": {
        "button": ["Enter", "Space"],
        "input": ["Enter"],
        "modal": ["Escape"],
        "dropdown": ["ArrowUp", "ArrowDown", "Enter", "Escape"]
      }
    },
    "ariaLabel": {
      "required": true,
      "fallback": "Use texto visível ou nome do componente"
    },
    "focusTrap": {
      "enabled": "for_modals",
      "description": "Foco fica preso dentro de modais"
    },
    "announcements": {
      "enabled": true,
      "events": ["success", "error", "loading"]
    }
  },
  
  "validation": {
    "timing": "onBlur",
    "showError": "inline",
    "description": "Valida ao sair do campo, erro inline"
  },
  
  "layout": {
    "overflow": "ellipsis",
    "description": "Textos longos cortam com '...'"
  },
  
  "emptyState": {
    "behavior": "disable",
    "description": "Desabilita componente quando sem dados necessários"
  },
  
  "byComponentType": {
    "button": {
      "variant": "primary",
      "size": "md",
      "fullWidth": false,
      "iconPosition": "left"
    },
    "input": {
      "autocomplete": "off",
      "spellcheck": false,
      "clearable": true
    },
    "modal": {
      "closeOnOverlay": true,
      "closeOnEscape": true,
      "size": "md",
      "centered": true
    },
    "dropdown": {
      "searchable": "when_many_options",
      "clearable": true,
      "placeholder": "Selecione..."
    },
    "list": {
      "emptyMessage": "Nenhum item encontrado",
      "loading": "skeleton"
    },
    "form": {
      "submitOnEnter": false,
      "confirmOnLeave": true,
      "resetOnSuccess": false
    },
    "tooltip": {
      "delay": 500,
      "position": "top"
    },
    "toast": {
      "position": "top-right",
      "duration": {
        "success": 3000,
        "error": 5000,
        "info": 4000
      }
    }
  },
  
  "testDefaults": {
    "assertions": [
      "renders without crashing",
      "handles empty/null props gracefully",
      "is accessible via keyboard",
      "has correct aria attributes"
    ],
    "happyPath": [
      "executes primary action successfully",
      "shows success feedback"
    ],
    "sadPath": [
      "shows error feedback on failure",
      "maintains usable state after error"
    ],
    "edgeCases": [
      "handles rapid consecutive interactions",
      "handles missing required data"
    ]
  }
}
