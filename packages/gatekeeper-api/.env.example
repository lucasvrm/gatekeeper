DATABASE_URL="file:./dev.db"
NODE_ENV="development"
PORT=3000
LOG_LEVEL="debug"

# ── SSE & Event Configuration ──────────────────────────────────────────────────
# Server-Sent Events heartbeat interval (ms)
SSE_HEARTBEAT_INTERVAL=15000

# Event buffer TTL for SSE replay (ms)
SSE_BUFFER_TTL=60000

# Batch flush interval for event persistence (ms)
BATCH_FLUSH_INTERVAL=100

# Event buffer garbage collection interval (ms)
EVENT_BUFFER_GC_INTERVAL=300000

# ── Run Event Buffer Configuration ─────────────────────────────────────────────
# TTL for run event buffer in milliseconds (default: 60000 = 60s)
RUN_EVENT_BUFFER_TTL=60000

# Maximum events per run in buffer (default: 50)
RUN_EVENT_MAX_BUFFER_SIZE=50

# Enable/disable run event buffering (default: true)
RUN_EVENT_BUFFER_ENABLED=true

# ── Log Rotation Configuration ─────────────────────────────────────────────
# Days to retain logs in database (older logs are deleted)
LOG_RETENTION_DAYS=30

# Log rotation interval (ms) - how often to check for old logs
# Default: 86400000 (24 hours)
LOG_ROTATION_INTERVAL=86400000

# ── HTTP Configuration ─────────────────────────────────────────────────────────
# HTTP request timeout for client requests (ms)
HTTP_REQUEST_TIMEOUT=25000
