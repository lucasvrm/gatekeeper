{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "APIEndpointContract",
  "title": "API Endpoint Contract Schema",
  "description": "Schema para definição de contratos de endpoints de API",
  "type": "object",
  "required": ["method", "path", "description", "response"],
  "properties": {
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
      "description": "Método HTTP do endpoint"
    },
    "path": {
      "type": "string",
      "description": "Caminho do endpoint",
      "pattern": "^/",
      "examples": ["/api/users", "/api/users/:id", "/api/leads/:leadId/tasks"]
    },
    "description": {
      "type": "string",
      "description": "Descrição do que o endpoint faz"
    },
    "handler": {
      "type": "string",
      "description": "Caminho do arquivo handler",
      "examples": ["src/api/users/create.ts", "src/pages/api/leads/[id].ts"]
    },
    "request": {
      "$ref": "#/definitions/Request"
    },
    "response": {
      "$ref": "#/definitions/Response"
    },
    "authentication": {
      "$ref": "#/definitions/Authentication"
    },
    "authorization": {
      "$ref": "#/definitions/Authorization"
    },
    "rateLimit": {
      "$ref": "#/definitions/RateLimit"
    },
    "sideEffects": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/SideEffect"
      },
      "description": "Efeitos colaterais da operação"
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Lista de testes obrigatórios"
    }
  },
  "definitions": {
    "Request": {
      "type": "object",
      "properties": {
        "params": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/ParamSchema"
          },
          "description": "Path parameters (ex: :id)"
        },
        "query": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/QuerySchema"
          },
          "description": "Query string parameters"
        },
        "body": {
          "$ref": "#/definitions/BodySchema"
        },
        "headers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/HeaderSchema"
          },
          "description": "Headers esperados"
        }
      }
    },
    "ParamSchema": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "uuid"]
        },
        "description": {
          "type": "string"
        },
        "validation": {
          "type": "string"
        }
      }
    },
    "QuerySchema": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "default": {},
        "description": {
          "type": "string"
        },
        "enum": {
          "type": "array",
          "items": {}
        }
      }
    },
    "BodySchema": {
      "type": "object",
      "properties": {
        "contentType": {
          "type": "string",
          "default": "application/json"
        },
        "schema": {
          "type": "object",
          "description": "JSON Schema do body"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "value", "expectedOutcome"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Nome do exemplo"
              },
              "value": {
                "description": "Valor do body"
              },
              "expectedOutcome": {
                "type": "string",
                "enum": ["success", "validation_error", "auth_error", "not_found", "conflict"],
                "description": "Resultado esperado"
              }
            }
          }
        }
      }
    },
    "HeaderSchema": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "validation": {
          "type": "string"
        }
      }
    },
    "Response": {
      "type": "object",
      "required": ["success"],
      "properties": {
        "success": {
          "$ref": "#/definitions/SuccessResponse"
        },
        "errors": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ErrorResponse"
          },
          "description": "Respostas de erro possíveis"
        }
      }
    },
    "SuccessResponse": {
      "type": "object",
      "required": ["status"],
      "properties": {
        "status": {
          "type": "integer",
          "enum": [200, 201, 204],
          "description": "HTTP status code de sucesso"
        },
        "body": {
          "type": "object",
          "description": "JSON Schema do corpo da resposta"
        },
        "example": {
          "description": "Exemplo de resposta de sucesso"
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "required": ["scenario", "status", "body"],
      "properties": {
        "scenario": {
          "type": "string",
          "description": "Descrição do cenário de erro"
        },
        "status": {
          "type": "integer",
          "enum": [400, 401, 403, 404, 409, 422, 429, 500],
          "description": "HTTP status code do erro"
        },
        "body": {
          "type": "object",
          "required": ["error"],
          "properties": {
            "error": {
              "type": "string",
              "description": "Mensagem de erro"
            },
            "code": {
              "type": "string",
              "description": "Código de erro para programmatic handling"
            },
            "details": {
              "type": "object",
              "description": "Detalhes adicionais do erro"
            }
          }
        }
      }
    },
    "Authentication": {
      "type": "object",
      "properties": {
        "required": {
          "type": "boolean",
          "default": true,
          "description": "Se autenticação é necessária"
        },
        "type": {
          "type": "string",
          "enum": ["bearer", "api_key", "basic", "cookie"],
          "default": "bearer"
        }
      }
    },
    "Authorization": {
      "type": "object",
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Roles permitidos"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Scopes necessários"
        },
        "checkOwnership": {
          "type": "boolean",
          "description": "Se deve verificar ownership do recurso"
        },
        "ownershipField": {
          "type": "string",
          "description": "Campo que define o owner",
          "default": "userId"
        }
      }
    },
    "RateLimit": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "requests": {
          "type": "integer",
          "description": "Número máximo de requests"
        },
        "window": {
          "type": "string",
          "description": "Janela de tempo",
          "pattern": "^\\d+[smh]$",
          "examples": ["1m", "1h", "1s"]
        }
      }
    },
    "SideEffect": {
      "type": "object",
      "required": ["action"],
      "properties": {
        "action": {
          "type": "string",
          "description": "Descrição da ação"
        },
        "verification": {
          "type": "string",
          "description": "Como verificar que ocorreu"
        },
        "async": {
          "type": "boolean",
          "default": false,
          "description": "Se é executado de forma assíncrona"
        }
      }
    }
  }
}
